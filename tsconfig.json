{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./dist/",
		"strict": true,
		"alwaysStrict": true,
		"rootDir": "./src/",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["./src"]
}
